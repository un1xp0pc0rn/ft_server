server {
    listen 81;
    listen [::]:81;
    server_name localhost;
    root /var/www/phpmyadmin;
    index index.php index.html index.htm;
    location / {
        try_files $uri $uri/ $uri.html = 404;
    }
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
    }
    location ~ /\. {
        deny all;
        access_log off; 
        log_not_found off;
    }
}
server {
	listen 80;
	listen [::]:80;

	root /var/www/localhost;
	index index.html index.htm index.php;

	server_name localhost www.localhost;

	location / {
		try_files $uri $uri/ =404;
		autoindex off;
	}
	location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
    }
}